{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs
{% endblock %}

{% block body %}
	<div class="container-fluid">

		<div class="d-flex justify-content-around mt-4">
			<h1>Utilisateurs enregistrés</h1>

			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}

			<a class="btn btn-dark px-3 fw-bold fs-4" href="{{ path('app_admin_users_new')}}">+</a>
		</div>

		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Coordonnées</th>
					<th>Âge</th>
					<th>Date d'inscription</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.lastname }}
							{{ user.firstname }}
							<a href="mailto:{{ user.email }}">{{ user.email }}</a>
						</td>
						<td>{{ user.age }}</td>
						<td>{{ user.createdAt.format('d/m/Y') }}</td>
						<td>
							<a href="{{ path('app_admin_users_edit', {id: user.id}) }}" class="btn btn-warning">Editer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">No records found.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
